generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Merchant {
  id         Int       @id @default(autoincrement())
  uid        String    @unique
  name       String
  login      String
  password   String
  phone      String
  email      String
  secret_key String
  domain     String
  sessions   Session[]
  created_at String
}

model Session {
  id          Int       @id @default(autoincrement())
  uid         String    @unique
  merchant    Merchant  @relation(fields: [merchant_id], references: [id])
  merchant_id Int
  secret_key  String
  amount      Float
  currency    Currency
  status      Status
  description String
  paid        Boolean
  metadata    Json
  payment     Payment[]
  created_at  String
}

model Payment {
  id               Int         @id @default(autoincrement())
  time_opened      String
  timezone         Int
  browser_version  String
  browser_language String
  ip               String
  email            String
  payment_type     PaymentType
  session          Session     @relation(fields: [session_uid], references: [uid], onUpdate: NoAction)
  session_uid      String      @unique
  time_closed      String?
  time_paid        String?
  from             String?
  card_id          Int
  created_at       String
}

model Card {
  id              Int         @id @default(autoincrement())
  payment_type    PaymentType
  card_number     String
  card_holder     String
  card_receiver   String
  card_cvv        String
  card_valid_thru String
  card_phone      String
  card_login      String
  card_password   String
  card_pin        String
  card_secret     String
  active          Boolean
  busy            Boolean
}

enum Currency {
  RUB
}

enum Status {
  PROCESS
  PENDING
  SUCCESS
  ERROR
  EXITED
}

enum PaymentType {
  default
  sberbank
  alfabank
  tinkoff
  raiffeisen
}
